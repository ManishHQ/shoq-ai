# Server Environment Variables for api.shoq.live

# Application
NODE_ENV=production
PORT=8000

# Database
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/shoq

# JWT
JWT_SECRET=your-super-secret-jwt-key-here

# Hedera Configuration
OPERATOR_ADDRESS=0.0.your-hedera-account
OPERATOR_KEY=your-hedera-private-key
SHOP_OWNER_ADDRESS=0.0.shop-owner-account
HEDERA_USDC_TOKEN_ID=0.0.6528760

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# AI Services
GEMINI_API_KEY=your-gemini-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
FULFILLMENT_EMAIL=orders@shoq.live

# Frontend URL (for email links)
FRONTEND_URL=https://shoq.live

# Server URL (for internal API calls)
SERVER_URL=https://api.shoq.live
